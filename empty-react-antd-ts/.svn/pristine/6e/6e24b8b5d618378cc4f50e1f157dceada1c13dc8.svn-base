import React from 'react';
import Container, { ContainerLoading } from '../../components/Container';
import { Breadcrumb,Icon,Typography, Button, Divider, Col, Modal, Alert, notification, message } from 'antd';
import { ApplySectionLicenseStep, ApplySectionPrompt } from '../../components/ApplyHeader';
import { Link, withRouter } from 'react-router-dom';
import { ApplyStep, AppComponentProps, ApplyContentExist, PageError500, ApplyInspectContent } from '../../app/Model';
import StaffManager from '../../components/ApplyStaffManager';
import { HttpRequest } from '../../app/Request';
import ApplyUtils from '../../utils/ApplyUtils';
import InteractionUtils from '../../utils/InteractionUtils';

/**
 * 许可流程：第四步，人员信息
 */
class LicenseStaff extends React.Component<AppComponentProps>{
    readonly state:{
        /**申请单号 */
        serialNumber:string;
        /**保存按钮是否请求中 */
        loading:boolean;
        /**提交按钮是否请求中 */
        submiting:boolean;
        /**是否已经保存 */
        saved:boolean;
        /**申请单基本信息 */
        apply?:ApplyContentExist,
        /**弹出信息提示 */
        alert:{
            show:boolean,
            title:string,
            description:string
        }
    }={
        serialNumber:this.props.match.params.id,
        loading:false,
        submiting:false,
        saved:true,
        alert:{show:false,title:"",description:""}
    };

    private staffManagerRef:any=React.createRef();

    /**
     * 页面布局
     */
    render(){
        //未载入数据时
        if(!this.state.apply){
            return (
                <ContainerLoading />
            );
        }
        
        const {Title}=Typography;

        return (
            <Container needLogin={false}>
                {/* 标题 */}
                <Breadcrumb className="breadcrumb">
                    <Breadcrumb.Item>
                        <Link to="/public">
                            <Icon type="file-text"/>&nbsp;
                            <span>执业申请</span>
                        </Link>
                    </Breadcrumb.Item>
                    <Breadcrumb.Item><span>许可</span></Breadcrumb.Item>
                </Breadcrumb>
                <Title level={4} className="title-with-underline">许可申请</Title>

                {/* 顶部 */}
                <ApplySectionPrompt serialNumber={this.state.serialNumber} 
                    deadline={this.state.apply.effectiveDate} />
                <ApplySectionLicenseStep {...ApplyStep.LICENSE_STAFF} />
                <Divider><span className="title-inner">第四步：医护人员</span></Divider>

                {/* 表单：人员管理 */}
                <Col span={22} offset={1}>
                    <h4 className="title-form-sub">其他人员</h4>
                    <StaffManager wrappedComponentRef={(ref:any)=>this.staffManagerRef=ref}
                        serialNumber={this.state.serialNumber} 
                        disabled={this.state.loading||this.state.submiting}
                        onChange={this.personInforChangeHandler}
                    />
                </Col>

                {/* 提示信息 */}
                {(this.state.alert.show)?(
                    <Col span={12} offset={6} style={{marginTop:10}}>
                        <Alert
                            message={this.state.alert.title}
                            description={this.state.alert.description}
                            type="error" showIcon
                        />
                    </Col>
                ):null}

                {/* 按钮 */}
                <Col span={24} className="section-buttons">
                    <Button 
                        onClick={this.prevStep}
                        disabled={this.state.loading||this.state.submiting}
                    >
                        上一步
                    </Button>
                    <Button type="primary"
                        onClick={this.saveStaffButNotSubmit}
                        loading={this.state.loading}
                        disabled={this.state.submiting}
                    >
                        保存但不提交
                    </Button>
                    <Button type="danger" 
                        onClick={this.saveStaffAndSubmitConfirm}
                        loading={this.state.submiting}
                        disabled={this.state.loading}
                    >
                        保存并提交申请
                    </Button>
                </Col>
            </Container>
        );
    }

    /**
     * 组件载入后，载入数据信息（包括申请单信息和管理人员信息）
     */
    async componentDidMount(){
        this.loadData(true);
    }

    /**
     * 卸载时删除窗口关闭监听
     */
    componentWillUnmount(){
        InteractionUtils.removeWindowCloseListener();
    }

    /**
     * 载入数据
     */
    loadData=async (addListener:boolean)=>{
        //获取申请单信息
        const applyExistResponse=await ((new HttpRequest()).get<ApplyContentExist>(
            `webapi/apply/existApplyNo?applyNo=${this.state.serialNumber}`
        ));

        // 失败跳转500
        if(!applyExistResponse.success||!applyExistResponse.data){
            this.props.history.push(PageError500);
            return;
        }

        // 不可编辑跳转审核结果
        const {status}=applyExistResponse.data;
        if(!ApplyUtils.canEdit(status)){
            this.props.history.push(ApplyStep.LICENSE_RESULT.routePath(this.state.serialNumber));
            return;
        }

        // 设置显示
        this.setState({
            ...this.state,
            apply:{
                ...applyExistResponse.data
            },
        });

        // 添加窗口关闭监听
        if(addListener){
            InteractionUtils.addWindowCloseListener((event:Event)=>{
                if(this.state.saved)    event.preventDefault();
                else                    event.returnValue=true;
            });
        }

        // 审核被驳回，获取驳回理由
        if(ApplyUtils.needLoadReject(applyExistResponse.data.status)&&addListener){
            const rejectArrayResponse=await ((new HttpRequest()).get<Array<ApplyInspectContent>>(
                `webapi/apply/auditOpinion?applyNo=${this.state.serialNumber}`
            ));

            // 失败
            if(!rejectArrayResponse.success||!rejectArrayResponse.data){
                return;
            }

            // 找到最新的拒绝内容
            let rejectContent:ApplyInspectContent|null=null;
            for(let l=rejectArrayResponse.data.length,i=l-1;i>-1;i--){
                const current=rejectArrayResponse.data[i];
                if(ApplyUtils.inspectIsReject(current.status)){
                    rejectContent=current;
                    break;
                }
            }

            //通知显示拒绝理由
            if(!rejectContent) return;
            notification["warning"]({
                message:"申请被驳回！",
                description:rejectContent.opinion
            });
        }
    }

    /**
     * 信息修改处理
     */
    personInforChangeHandler=()=>{
        this.setState({
            ...this.state,
            saved:false
        });
    };

    /**
     * 上一步
     */
    prevStep=()=>{
        const toPrevStep=()=>{
            notification.destroy();
            InteractionUtils.scrollToTop();
            this.props.history.push(ApplyStep.LICENSE_MANAGER.routePath(this.state.serialNumber));
        };

        if(!this.state.saved){
            Modal.confirm({
                title: "确定要离开这里么?",
                content:"未保存的信息将会丢失！",
                okText:"继续离开",
                cancelText:"取消",
                onOk() {toPrevStep()},
            });
            return;
        }
        
        toPrevStep();
    }

    /**
     * 保存但不提交
     */
    saveStaffButNotSubmit=async ()=>{
        const savedData={...this.staffManagerRef.staffs(),applyNo:this.state.serialNumber};
        if(!savedData) return;
        
        // 发起保存请求
        this.setState({...this.state,loading:true});
        const saveResponse=await ((new HttpRequest()).post<any,object>(
            "webapi/apply/savePersonInfo",savedData
        ));

        //请求失败显示错误信息
        if(!saveResponse.success){
            this.setState({
                ...this.state,
                loading:false,
                alert:{
                    show:true,
                    title:"保存失败",
                    description:saveResponse.message
                }
            });
            return;
        }

        this.setState({
            ...this.state,
            loading:false,
            saved:true,
            alert:{
                ...this.state.alert,
                show:false
            },
            apply:null,
            legal:null,
            principal:null,
            contact:null
        });
        message.success("保存成功！");
        setTimeout(()=>{this.loadData(false)},300);
    }

    /**
     * 保存并提交提示
     */
    saveStaffAndSubmitConfirm=async ()=>{
        const savedData={...this.staffManagerRef.staffs(),applyNo:this.state.serialNumber};
        if(!savedData) return;
        const {saveStaffAndSubmit}=this;

        Modal.confirm({
            title: "确定要提交执业申请么?",
            content:"提交后申请内容将无法修改！",
            okText:"继续提交",
            cancelText:"取消",
            onOk() {
                setTimeout(()=>saveStaffAndSubmit(savedData),300);
            },
        });
    }

    /**
     * 保存并提交
     */
    saveStaffAndSubmit=async (savedData:any)=>{
        // 发起保存请求
        this.setState({...this.state,submiting:true});
        const saveResponse=
            await ((new HttpRequest()).post<any,object>(
                "webapi/apply/submitApply",
                savedData
            ));

        //请求失败显示错误信息
        if(!saveResponse.success){
            this.setState({
                ...this.state,
                submiting:false,
                alert:{
                    show:true,
                    title:"提交失败",
                    description:saveResponse.message
                }
            });
            return;
        }

        //成功后转入下一步
        this.setState({...this.state,submiting:false});
        notification.destroy();
        InteractionUtils.scrollToTop();
        this.props.history.push(ApplyStep.LICENSE_RESULT.routePath(this.state.serialNumber));
    }
}
export default withRouter(LicenseStaff);