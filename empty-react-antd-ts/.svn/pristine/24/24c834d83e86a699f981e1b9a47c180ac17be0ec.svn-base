/* 容器布局公共样式设置 */
.layout .header-container,
.layout .content-container,
.layout .footer-container{
    width: 1200px;
    margin: 0 auto;
}
.layout .content-container{
    margin-top: 30px;
    margin-bottom: 30px;
    padding:20px 30px 50px;
    background-color:white;
    min-height: 500px; 
}
.layout .header-logo{
    min-width: 280px;
    height: 31px;
    float: left;
    color: white; 
    font-size: 20px;
}
.layout .header-login-button{
    float: right;
    height: 64px;
    line-height: 64px;
    color: white;
}
.layout .header-login-button span:first-child{
    margin-right: 10px;
}

/* 容器内全局样式设置 */
.title-with-underline{
    border-bottom: 1px solid #e8e8e8;
    padding-top: 24px;
    padding-bottom: 6px;
}
.title-prompt-center{
    text-align: center;
    margin-top: 20px;
}
.title-prompt-center>h4{
    font-size: 16px;
}
.title-prompt-center i{
    color: #F9B133;
    margin-right: 5px;
    font-size: 15px;
}
.title-prompt-center>h5{
    color: #4d4d4d;
    font-size: 14px;
}
.section-step{
    margin: 30px auto;
    max-width: 960px;
}
.section-prompt{
    margin-top: 20px;
}
.title-inner{
    font-size: 18px;
    color: #5A5A5A;
}
.title-form-sub{
    font-size: 17px;
    margin-top: 28px;
}
.section-buttons{
    margin-top: 20px;
    text-align: center;
}
.error{
    height: 500px;
    padding: 50px;
    background: no-repeat center;
}
.error-404{
    background-image: url("../resources/error404.png")
}
.error-403{
    background-image: url("../resources/error403.png")
}
.error-500{
    background-image: url("../resources/error500.png")
}
.error-title{
    color: #4d4d4d;
    font-size: 80px;
    margin-bottom: 5px;
    margin-top: 120px;
}
.error-description{
    color: #5A5A5A;
    font-size: 18px;
}

/* 覆盖antd的样式设置 */
.section-buttons .ant-btn{
    margin-right: 16px;
}
.ant-form-vertical .ant-form-item-label::after{
    display: inline-block;
    color: rgba(0, 0, 0, 0.85);
    font-size: 14px;
    content: "：";
}
.ant-form-vertical .ant-radio-wrapper{
    margin-top: 7px;
    margin-bottom: 5px;
}
.ant-form-vertical .ant-calendar-picker{
    width: 100%;
}
.input-group .ant-input[disabled]{
    color: rgba(0, 0, 0, 0.65);
    background-color: #fff;
    margin-bottom: 10px;
    max-width: 76px;
}
.input-group .ant-col-8:before{
    content: "--";
    margin-right: 6px;
    margin-left: -16px;
}
.input-group .ant-col-8:first-of-type:before{
    display: none;
    margin-left:0;
}
.form-ul-group{
    list-style: none;
    padding-left: 0;
}
.form-ul-group .ant-form-item,
.form-ul-group .ant-input-number,
.form-ul-group button.ant-btn-dashed{
    width: 100%;
    margin-bottom: 0;
}
.form-ul-group .divider{
    display: inline-block;
    width: 100%;
    text-align: center;
    margin: 8px 0;
}
.form-ul-group .dynamic-delete-button{
    height: 30px;
    width: 45px;
    margin-left: 18px;
    font-size: 20px;
    padding-top: 8px;
}
.ant-drawer-body.ant-drawer-body-with-bar{
    padding-bottom: 53px;
}
.ant-drawer-wrapper-body>.ant-drawer-header{
    position: absolute;
    width: 100%;
    z-index: 99;
}
.ant-drawer-body .title-form-sub{
    font-size: 16px;
    margin-top: 0;
    margin-bottom: 20px;
    padding-left: 0;
}
.ant-drawer-body .title-form-sub:first-of-type{
    margin-top: 55px;
}
.ant-drawer-body .bottom-bar{
    position:absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    border-top: 1px solid #e9e9e9;
    padding: 10px 16px;
    background:#fff;
    text-align:right;
}
.ant-card-actions > li > span i,
.ant-btn.ant-btn-loading:not(.ant-btn-circle):not(.ant-btn-circle-outline):not(.ant-btn-icon-only) .anticon:not(:last-child){
    width: auto;
    color: white;
}
.page-loading,.card-loading{
    width: 100%;
}
.page-loading.ant-spin-lg{
    margin-top: 200px;
}
.card-loading.ant-spin-lg{
    margin-top: 100px;
    margin-bottom: 100px
}
.must-upload label::before{
    display: inline-block;
    margin-right: 4px;
    color: #f5222d;
    font-size: 14px;
    font-family: SimSun, sans-serif;
    line-height: 1;
    content: '*';
}
.staff-meta .ant-card-meta-avatar{
    width: 70px;
    height: 98px;
}
.staff-meta .ant-card-meta-avatar img{
    width: 100%;
    max-height:100%;
}
.apply-result{
    text-align: center;
}
.apply-result .anticon{
    font-size: 72px;
    margin: 20px 0;
}
.apply-result .anticon.success{
    color: #52c41a;
}
.apply-result .anticon.failure{
    color:red;
}
.apply-result .button-group{
    margin: 20px auto;
    display: block;
}
.apply-result .instruction{
    text-align: left;
}
.apply-result .instruction .title{
    margin-bottom: 2px;
    font-weight: bold;
}
.apply-result .instruction .stress{
    font-size: 20px;
    font-weight: bold;
}