<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Custom properties -->
    <properties>
        <!-- jdk -->
        <version-jdk>1.8</version-jdk>
        <!-- jar complier -->
        <version-maven-complier>3.7.0</version-maven-complier>

        <!-- Spring -->
        <version-spring>5.0.6.RELEASE</version-spring>
        <!-- Servlet -->
        <version-servlet>4.0.0</version-servlet>
        <!-- Jackson -->
        <version-jackson>2.9.5</version-jackson>
        <!-- validator -->
        <version-validator>6.1.0.Final</version-validator>

        <!-- log -->
        <version-log>1.7.25</version-log>
    </properties>

    <!-- project -->
    <groupId>xyz.proteanbear</groupId>
    <artifactId>muscida-spring-context</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <!-- dependencies repository -->
    <repositories>
        <!-- Maven Central -->
        <repository>
            <id>central</id>
            <name>Central Repository</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <layout>default</layout>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <!-- dependencies -->
    <dependencies>
        <!-- Provided -->
        <!-- Spring and SpringMVC -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-webmvc</artifactId>
            <version>${version-spring}</version>
            <scope>provided</scope>
        </dependency>
        <!-- Servlet Api -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>${version-servlet}</version>
            <scope>provided</scope>
        </dependency>
        <!-- Jackson -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${version-jackson}</version>
            <scope>provided</scope>
        </dependency>
        <!-- validator -->
        <dependency>
            <groupId>org.hibernate.validator</groupId>
            <artifactId>hibernate-validator</artifactId>
            <version>${version-validator}</version>
            <scope>provided</scope>
        </dependency>

        <!-- Log -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${version-log}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <!-- Profile -->
    <profiles>
        <!-- environment：develop，Default -->
        <profile>
            <id>envDevelop</id>
            <properties>
                <environment>develop</environment>
            </properties>
            <activation><activeByDefault>true</activeByDefault></activation>
        </profile>
        <!-- environment：test -->
        <profile>
            <id>envTest</id>
            <properties>
                <environment>test</environment>
            </properties>
        </profile>
        <!-- environment：product -->
        <profile>
            <id>envProduct</id>
            <properties>
                <environment>product</environment>
            </properties>
        </profile>
    </profiles>

    <!-- Build -->
    <build>
        <!-- file name -->
        <finalName>${artifactId}-${version}</finalName>
        <!-- directory for saving -->
        <directory>${basedir}/target</directory>
        <!-- plugin -->
        <plugins>
            <!-- Compiler：UTF-8 encode、libs directory -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${version-maven-complier}</version>
                <configuration>
                    <source>${version-jdk}</source>
                    <target>${version-jdk}</target>
                    <encoding>UTF-8</encoding>
                    <compilerArguments>
                        <extdirs>libs</extdirs>
                    </compilerArguments>
                </configuration>
            </plugin>
        </plugins>
        <!-- Resource files -->
        <resources>
            <!-- Code internal resource files -->
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <!-- file:public -->
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                    <include>**/*.yaml</include>
                </includes>
            </resource>
            <!-- file:current profile -->
            <resource>
                <directory>src/main/resources-${environment}</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                    <include>**/*.yaml</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>